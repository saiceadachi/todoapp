<p style="color: green"><%= notice %></p>

<h1>Todos</h1>

<div id="todos">
  <% @todos.each do |todo| %>
    <%= render todo %>
    <p>
    <%= link_to "Show this todo", todo %>
    <%= link_to "Delete this todo", todo, method: :delete %>
    </p>
  <% end %>
</div>

<%= link_to "New todo", new_todo_path %>
